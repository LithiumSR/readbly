<% content_for :for_head do %>
  <%= stylesheet_link_tag '/stylesheets/signup.css', media: 'all', 'data-turbolinks-track': 'reload' %>
<% end %>

<div class="rectangle">

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <h2>Sign up</h2>
    <%= devise_error_messages! %>

      <div class="field">
        <%= f.email_field :email, autofocus: true, :class => "label_field", placeholder: "Email", autocomplete: "email" %>
      </div>
      <div class="field">
        <% if @minimum_password_length %>
          <em>(
            <%= @minimum_password_length %> characters minimum)</em>
          <% end %>
            <br />
            <%= f.password_field :password, :class => "label_field", placeholder: "Password", autocomplete: "off" %>
      </div>

      <div class="field">
        <%= f.password_field :password_confirmation, :class => "label_field", placeholder: "Password Confirmation", autocomplete: "off" %>
      </div>

      <div class="actions">
        <%= f.submit "Sign Up", :class => "button"%>
      </div>
      <%= render "devise/shared/links" %>
  <% end %>

</div>