<head>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <%= yield :meta %>
    <meta name="robots" content="index,follow">
    <title>
      <%= yield :title %>
    </title>
    <link rel="stylesheet" type="text/css" href="/stylesheets/main.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/vue/2.5.16/vue.min.js"></script>
    <script type="text/javascript" src="javascript/home/app_min.js"></script>
    <%= csrf_meta_tags %>
</head>

<p class="navbar2-text pull-right">
  <% if user_signed_in? %>

    <p class="email">
      <%= image_tag("rblogo.svg", :alt => "Readbly Logo", :align => "middle", :size => "64x85", :class => "rblogo") %>
      <%= current_user.email%>
    </p>
        <br>
        <% else %>
          <%= link_to "Sign up", new_user_registration_path, :class => 'navbar2-link'  %> |
            <%= link_to "Login", new_user_session_path, :class => 'navbar2-link'  %>
              <% end %>
</p>
<div id="app" class="container">
  <a href="/books">
    <carta data-image="images/collection.jpg">
      <h1 id="book" slot="header">Collection</h1>

    </carta>
  </a>

  <a href="/my_reservations">
    <carta data-image="images/reserv.jpg">
      <h1 id="film" slot="header">Reservation</h1>

    </carta>
  </a>

  <a href="/book/search">
    <carta data-image="images/search.jpg">
      <h1 id="music" slot="header">Search</h1>

    </carta>
  </a>
</div>

<div class="float">
<div class="dropdown-menu">
  <span tabindex="0" onclick="return true">
    <img src="images/settings.svg" height="32" width="32" class="my-float" id="home"/></span>
  <div tabindex="0" onclick="return true"></div>
  <ul>
    <% if isAdmin(current_user) %>
    <li><a href="/manage_users" onclick="sampleMenu(this)">Manage Users</a></li>
    <% end %>
    <% if isAdmin(current_user) or isOperator(current_user) %>
    <li><a href="manage_reservations" onclick="sampleMenu(this)">Manage Reservations</a></li>
    <% end %>
    <%= link_to 'Edit profile', edit_user_registration_path, :onclick => 'sampleMenu(this)'%>
    <%= link_to 'Logout', destroy_user_session_path, :onclick => 'sampleMenu(this)', method: :delete%>
  </ul>
</div>
</div>

</div>
<% if notice %>
  <p class="alert alert-success">
    <%= notice %>
  </p>
  <% end %>