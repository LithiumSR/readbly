<head>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.0/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.0/umd/popper.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.0/js/bootstrap.min.js"></script>
  <%= javascript_include_tag '/javascript/manage_users/manage_users.js', 'data-turbolinks-track': 'reload' %>
</head>

<p id="notice">
  <%= notice %>
</p>

<body>
  <div class="container">
    <h2> Reservations/Loans for
      "<%= @book.title %>":</h2>
    <div id="pending" class="tabcontent">
      <table class="table table-hover">
        <thead>
          <tr>
            <th>Reservation/Loan ID</th>
            <th>User</th>
            <th>Created at</th>
            <th>Expiration date</th>
          </tr>
        </thead>
        <tbody>
          <% @reservations.each do |reservation| %>
            <tr>
              <td>
                <%= reservation.id%>
              </td>
              <td>
                <%= getEmailById(reservation.user_id)%>
              </td>
              <td>
                <%= reservation.request_date %>
              </td>
              <td>
                <%= reservation.expiration_date %>
              </td>
            </tr>
            <% end %>
        </tbody>
      </table>
      <%= will_paginate @reservations %>
    </div>
  </div>
</body>